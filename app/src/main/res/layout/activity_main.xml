<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="70dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingBottom="70dp">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_header"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="90sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="40dp" />

    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/username"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintRight_toLeftOf="@id/username"/>

    <EditText
        android:layout_marginEnd="30dp"
        android:lines="1"
        android:layout_marginTop="100dp"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:hint="@null"
        android:importantForAutofill="no"
        android:inputType="text"
        android:id="@+id/username"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/password"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintRight_toLeftOf="@id/password"/>

    <EditText
        android:layout_marginEnd="30dp"
        android:lines="1"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:hint="@null"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:id="@+id/password"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/login"
        android:id="@+id/login"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintRight_toLeftOf="@id/sign_up" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/sign_up"
        android:id="@+id/sign_up"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintRight_toRightOf="@id/password" />

    <TextView
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintRight_toRightOf="@id/sign_up"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>